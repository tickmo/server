<%= provide(:title, "Edit Profile") %>
<h1>Edit your profile</h1>

<div class="row">
  <div class="span6 offset3 form-content">
    <%= render 'error_form', object: @user %>
    <div class="form-body">

    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit class: "btn btn-block btn-info", value: "Update Profile!" %>

    <% end %>
    </div>
  </div>
</div>
